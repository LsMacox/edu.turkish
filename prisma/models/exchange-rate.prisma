// Prisma Schema - Exchange Rates Domain
// Currency exchange rates cache

model ExchangeRate {
  id             Int      @id @default(autoincrement())
  baseCurrency   String   @default("USD") @map("base_currency") @db.VarChar(3)
  targetCurrency String   @map("target_currency") @db.VarChar(3)
  rate           Decimal  @db.Decimal(12, 6)
  fetchedAt      DateTime @default(now()) @map("fetched_at")
  expiresAt      DateTime @map("expires_at")
  
  @@unique([baseCurrency, targetCurrency])
  @@map("exchange_rates")
  @@index([expiresAt])
}
