{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --ext .js,.ts,.vue --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed/seed.ts",
    "db:studio": "prisma studio",
    "db:deploy": "prisma migrate deploy",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f mysql",
    "setup:dev": "npm run docker:up && sleep 10 && npm run db:push && npm run db:seed",
    "directus:health": "curl -sSf ${DIRECTUS_PUBLIC_URL:-http://localhost:8055}/server/health | cat",
    "directus:schema:snapshot": "npx --yes directus schema snapshot ./directus/schema.yaml --yes --url ${DIRECTUS_PUBLIC_URL:-http://localhost:8055} --email ${DIRECTUS_ADMIN_EMAIL:-admin@example.com} --password ${DIRECTUS_ADMIN_PASSWORD:-ChangeMe123!}",
    "directus:schema:apply": "npx --yes directus schema apply ./directus/schema.yaml --yes --url ${DIRECTUS_PUBLIC_URL:-http://localhost:8055} --email ${DIRECTUS_ADMIN_EMAIL:-admin@example.com} --password ${DIRECTUS_ADMIN_PASSWORD:-ChangeMe123!}",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "translate": "tsx scripts/translate.ts",
    "import:university": "tsx scripts/import-university.ts"
  },
  "dependencies": {
    "@directus/sdk": "20.1.0",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^2.0.0",
    "@nuxt/image": "^1.11.0",
    "@nuxt/scripts": "^0.11.13",
    "@nuxtjs/i18n": "^10.0.6",
    "@nuxtjs/robots": "^5.5.1",
    "@nuxtjs/sitemap": "^7.4.3",
    "@prisma/client": "^6.15.0",
    "@tailwindcss/typography": "^0.5.16",
    "@unhead/vue": "^2.0.14",
    "mysql2": "^3.14.5",
    "nuxt": "^4.1.0",
    "pinia": "^3.0.3",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/ph": "^1.2.2",
    "@nuxt/eslint": "^1.9.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/vue": "^8.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
