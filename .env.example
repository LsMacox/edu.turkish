# Docker environment for database
DB_HOST=mysql
DB_PORT=3306
DB_ROOT_PASS=root_password_123
DB_APP_PASS=super_app_pass

# Prisma Database URLs (when running inside Docker containers, use host "mysql")
# Application connection (least privileges; used by Prisma Client and migrations)
DATABASE_URL=mysql://app_user:${DB_APP_PASS}@${DB_HOST}:${DB_PORT}/edu_turkish
# Shadow DB connection (privileged; used only by prisma migrate to create a temporary shadow database)
SHADOW_DATABASE_URL=mysql://root:${DB_ROOT_PASS}@${DB_HOST}:${DB_PORT}/edu_turkish_shadow
# Shadow database name (extracted from SHADOW_DATABASE_URL)
SHADOW_DB=edu_turkish_shadow

