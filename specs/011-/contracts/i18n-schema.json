{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enhanced Service Pages i18n Schema",
  "description": "JSON schema for service page internationalization content",
  "type": "object",
  "properties": {
    "services": {
      "type": "object",
      "properties": {
        "common": {
          "type": "object",
          "required": ["deliveryTime", "howItWorks", "whyChooseUs", "trustIndicators"],
          "properties": {
            "deliveryTime": {
              "type": "string",
              "description": "Label for delivery timeframe (e.g., 'Срок')",
              "maxLength": 30
            },
            "howItWorks": {
              "type": "object",
              "required": ["title", "steps"],
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Section title",
                  "maxLength": 60
                },
                "steps": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 4,
                  "items": {
                    "type": "object",
                    "required": ["title", "description", "icon"],
                    "properties": {
                      "title": {
                        "type": "string",
                        "maxLength": 50
                      },
                      "description": {
                        "type": "string",
                        "maxLength": 200
                      },
                      "icon": {
                        "type": "string",
                        "pattern": "^(mdi|ph):[a-z-]+$"
                      }
                    }
                  }
                }
              }
            },
            "whyChooseUs": {
              "type": "object",
              "required": ["title", "factors"],
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Section title",
                  "maxLength": 60
                },
                "factors": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3,
                  "items": {
                    "type": "object",
                    "required": ["title", "description", "icon"],
                    "properties": {
                      "title": {
                        "type": "string",
                        "maxLength": 60
                      },
                      "description": {
                        "type": "string",
                        "maxLength": 150
                      },
                      "icon": {
                        "type": "string",
                        "pattern": "^(mdi|ph):[a-z-]+$"
                      }
                    }
                  }
                }
              }
            },
            "trustIndicators": {
              "type": "object",
              "required": ["workingSince", "documentsCount"],
              "properties": {
                "workingSince": {
                  "type": "string",
                  "maxLength": 80
                },
                "documentsCount": {
                  "type": "string",
                  "maxLength": 80
                }
              }
            }
          }
        }
      }
    }
  },
  "examples": [
    {
      "services": {
        "common": {
          "deliveryTime": "Срок",
          "howItWorks": {
            "title": "Как это работает",
            "steps": [
              {
                "title": "Загружаете документ",
                "description": "Отправьте нам скан или фото документа через форму на сайте",
                "icon": "mdi:upload"
              },
              {
                "title": "Мы уточняем детали",
                "description": "Наш менеджер свяжется с вами для уточнения требований",
                "icon": "mdi:message-text"
              },
              {
                "title": "Переводим и заверяем",
                "description": "Лицензированные переводчики выполняют перевод с нотариальным заверением",
                "icon": "mdi:translate"
              },
              {
                "title": "Получаете готовый файл",
                "description": "Высылаем электронную версию и при необходимости оригинал курьером",
                "icon": "mdi:check-circle"
              }
            ]
          },
          "whyChooseUs": {
            "title": "Почему выбирают нас",
            "factors": [
              {
                "title": "Лицензированные переводчики",
                "description": "Все наши специалисты имеют официальную аккредитацию",
                "icon": "mdi:certificate"
              },
              {
                "title": "Переводы принимают турецкие вузы",
                "description": "Работаем со всеми крупными университетами Турции",
                "icon": "mdi:school"
              },
              {
                "title": "Поддержка на русском, турецком и английском",
                "description": "Общайтесь с нами на удобном языке",
                "icon": "mdi:web"
              }
            ]
          },
          "trustIndicators": {
            "workingSince": "Работаем с 2019 года",
            "documentsCount": "1000+ переведённых документов"
          }
        }
      }
    }
  ]
}
